# Project A.N.C. Environment Variables
# Copy this file to .env and fill in your actual values

# =================== API Provider ===================
# Choose "google" for Gemini or "openai" for OpenAI
CHAT_API_PROVIDER=google

# =================== API Keys ===================
# Google Gemini API Key (For Alice Chat)
# Get your API key at: https://aistudio.google.com/apikey
GEMINI_API_KEY=your_api_key_here

# OpenAI API Key (Alternative for Alice Chat)
# Get your API key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_api_key_here

# =================== Alice Chat Configuration ===================
# Conversation history character limit (default: 4000)
# Controls how many characters of past conversation to include
ALICE_HISTORY_CHAR_LIMIT=4000

# =================== Compass API Configuration ===================
# Compass API base URL (without endpoint path)
COMPASS_API_BASE_URL=http://127.0.0.1:8000

# Compass API endpoint type: "search" or "graph_search" (default: search)
# - search: Standard vector similarity search
# - graph_search: Graph search including related memories
COMPASS_API_ENDPOINT=search

# Target field for search (default: content)
COMPASS_API_TARGET=content

# Number of initial results to fetch (default: 5)
COMPASS_API_LIMIT=5

# Number of related items per result for graph_search (default: 3)
# Only used when COMPASS_API_ENDPOINT=graph_search
COMPASS_API_RELATED_LIMIT=3

# Enable/disable response compression (default: False)
# Use "true", "1", or "yes" for True; anything else for False
COMPASS_API_COMPRESS=False

# Search mode: "latest" or "history" (default: latest)
# - latest: Use only the most recent user message for search
# - history: Use recent conversation history for search
COMPASS_API_SEARCH_MODE=latest

# =================== Debug Mode (Optional) ===================
# Set to 1, true, or yes to enable debug logging
ANC_DEBUG=false

# =================== Application Settings (Optional) ===================
# These can override config.py defaults if needed
# ANC_NOTES_DIR=./data/notes
# ANC_ARCHIVE_DIR=./data/notes/.archive
# ANC_DB_FILE=./data/anc_db.json
